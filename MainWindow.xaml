<Window
    x:Class="FxInvestmentManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2B579A" Padding="20,15">
            <TextBlock Text="FX INVESTMENT MANAGER" 
                      Foreground="White" 
                      FontSize="20" 
                      FontWeight="Bold"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Border Grid.Column="0" Background="#F8F9FA" BorderThickness="0,0,1,0" BorderBrush="#E0E0E0">
                <StackPanel Padding="15,20" Spacing="8">
                    <!-- Main Modules -->
                    <TextBlock Text="MAIN MODULES" FontSize="11" FontWeight="Bold" Foreground="Gray" Margin="0,0,0,5"/>

                    <Button x:Name="BtnDashboard" Content="Dashboard" Click="BtnDashboard_Click"
                            Background="#2B579A" Foreground="White" BorderThickness="0" 
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                            Padding="15,12" FontSize="12" FontWeight="SemiBold" CornerRadius="6"/>

                    <Button x:Name="BtnPerformance" Content="Performance" Click="BtnPerformance_Click"
                            Background="Transparent" Foreground="Black" BorderThickness="0"
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                            Padding="15,12" FontSize="12" FontWeight="SemiBold" CornerRadius="6"/>

                    <Button x:Name="BtnAccounts" Content="Accounts" Click="BtnAccounts_Click"
                            Background="Transparent" Foreground="Black" BorderThickness="0"
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                            Padding="15,12" FontSize="12" FontWeight="SemiBold" CornerRadius="6"/>

                    <Button x:Name="BtnReports" Content="Reports" Click="BtnReports_Click"
                            Background="Transparent" Foreground="Black" BorderThickness="0"
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                            Padding="15,12" FontSize="12" FontWeight="SemiBold" CornerRadius="6"/>

                    <!-- Tools Section -->
                    <Rectangle Height="1" Fill="#E0E0E0" Margin="0,20,0,10"/>
                    <TextBlock Text="TOOLS" FontSize="11" FontWeight="Bold" Foreground="Gray" Margin="0,0,0,5"/>

                    <Button x:Name="BtnSettings" Content="Settings" Click="BtnSettings_Click"
                            Background="Transparent" Foreground="Black" BorderThickness="0"
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                            Padding="15,12" FontSize="12" FontWeight="SemiBold" CornerRadius="6"/>

                    <Button x:Name="BtnHelp" Content="Help &amp; Documentation" Click="BtnHelp_Click"
                            Background="Transparent" Foreground="Black" BorderThickness="0"
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                            Padding="15,12" FontSize="12" FontWeight="SemiBold" CornerRadius="6"/>

                    <!-- Quick Stats Section -->
                    <Rectangle Height="1" Fill="#E0E0E0" Margin="0,20,0,10"/>
                    <TextBlock Text="QUICK OVERVIEW" FontSize="11" FontWeight="Bold" Foreground="Gray" Margin="0,0,0,5"/>

                    <StackPanel Background="White" Padding="10" CornerRadius="6" BorderThickness="1" BorderBrush="#E0E0E0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Total Balance" FontSize="10" Foreground="Gray" Grid.Row="0" Grid.Column="0"/>
                            <TextBlock x:Name="QuickBalance" Text="$15,000.00" FontSize="11" FontWeight="SemiBold" Grid.Row="0" Grid.Column="1"/>

                            <TextBlock Text="Weekly P&amp;L" FontSize="10" Foreground="Gray" Grid.Row="1" Grid.Column="0" Margin="0,3,0,0"/>
                            <TextBlock x:Name="QuickPnl" Text="+$150.25" FontSize="11" FontWeight="SemiBold" Foreground="Green" Grid.Row="1" Grid.Column="1" Margin="0,3,0,0"/>

                            <TextBlock Text="Active Accounts" FontSize="10" Foreground="Gray" Grid.Row="2" Grid.Column="0" Margin="0,3,0,0"/>
                            <TextBlock x:Name="QuickAccounts" Text="2" FontSize="11" FontWeight="SemiBold" Grid.Row="2" Grid.Column="1" Margin="0,3,0,0"/>

                            <TextBlock Text="This Week Trades" FontSize="10" Foreground="Gray" Grid.Row="3" Grid.Column="0" Margin="0,3,0,0"/>
                            <TextBlock x:Name="QuickTrades" Text="24" FontSize="11" FontWeight="SemiBold" Grid.Row="3" Grid.Column="1" Margin="0,3,0,0"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel x:Name="MainContentPanel" Background="White" Padding="30"/>
            </ScrollViewer>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#E1E5E9" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="DbStatus" Text="🟢 System: Ready" Foreground="Green" FontSize="11"/>
                <TextBlock Text="FX Investment Manager v1.0 - Professional Trading System" 
                          FontSize="11" Foreground="Gray" Grid.Column="1" HorizontalAlignment="Center"/>
                <TextBlock x:Name="LastUpdate" Text="Last Update: Loading..." 
                          FontSize="11" Foreground="Gray" Grid.Column="2" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>